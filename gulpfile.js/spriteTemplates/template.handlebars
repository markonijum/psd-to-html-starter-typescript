
{{#sprites}}
{{#if @first}}
.icon {
  display:block;
}
.icon:before {
  background-image: url({{{escaped_image}}});
  margin:auto;
}
{{/if}}
.icon--{{name}}:before {
  display: block;
  content: "";
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}};
}
{{/sprites}}